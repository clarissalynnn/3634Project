<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDFAEA">

    <TextView
        android:id="@+id/enter_ingredientsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="Search Ingredient"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchIngNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp"
        android:text="Ingredient Name:"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_ingredientsTV" />

    <TextView
        android:id="@+id/searchIngMeasurementTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Measurement :"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/searchIngAmtTV"
        app:layout_constraintTop_toBottomOf="@+id/enterSearchIngAmtTV" />

    <TextView
        android:id="@+id/searchIngAmtTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Amount (numbers only): "
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/searchIngNameTV"
        app:layout_constraintTop_toBottomOf="@+id/inputSearchIngNameTV" />

    <Spinner
        android:id="@+id/enterSearchIngMeasurement"
        android:layout_width="127dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:entries="@array/category_list1"
        app:layout_constraintEnd_toEndOf="@+id/searchIngMeasurementTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/searchIngMeasurementTV"
        app:layout_constraintTop_toBottomOf="@+id/searchIngMeasurementTV" />

    <Button
        android:id="@+id/searchIngButton"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#8BC34A"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterSearchIngMeasurement" />

    <EditText
        android:id="@+id/inputSearchIngNameTV"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Banana"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/searchIngNameTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/searchIngNameTV"
        app:layout_constraintTop_toBottomOf="@+id/searchIngNameTV" />

    <EditText
        android:id="@+id/enterSearchIngAmtTV"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="20"
        android:inputType="numberSigned"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/searchIngAmtTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/searchIngAmtTV"
        app:layout_constraintTop_toBottomOf="@+id/searchIngAmtTV" />


</androidx.constraintlayout.widget.ConstraintLayout>